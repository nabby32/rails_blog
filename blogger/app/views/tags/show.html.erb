<h1>Articles Tagged With <%= @tag.name.capitalize %></h1>

<ul>
	<% @tag.articles.each do |article| %>
		<li><%= link_to article.title, article_path(article) %></li>
	<% end %>
</ul>
<%= link_to "Delete this tag", tag_path(@tag), method: :delete, data: {confirm: "Do you really want to delete this tag?"} %>